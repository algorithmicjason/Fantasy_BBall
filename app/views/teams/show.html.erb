
<html>
<head>
<link rel="stylesheet" href="pages.scss">
</head>

<body>
<div class="container">
<h1> Welcome to <%= @team.name%> page </h1>
<ul>
    <li> Name : <%= @team.name.capitalize %>
    <li> Color : <%= @team.color %>
    <li> City : <%= @team.city %>
</ul>

<h2> Players on the <%=@team.name %> </h2>

<% @team.athletes.each do |athlete| %>
    <ol>  
    <%= link_to athlete.name, athlete_path(athlete) %>  
    </ol>
    <% end %><br><br>


 <%= form_tag edit_team_path, method: "get" do %>
    <%= submit_tag "Edit #{@team.name}" %>
  <% end %> <br><br>



<%= form_tag team_path(@team.id), method: "delete" do %>
    <%= submit_tag "Delete #{@team.name}" %>
  <% end %> <br><br>


  


</div>
</body>
</html>
 

  
  
  


