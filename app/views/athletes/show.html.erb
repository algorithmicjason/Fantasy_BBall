


<h1> Welcome to <%= @athlete.name%> page </h1>


<ul>
    <li> Position : <%= @athlete.position %>
    <li> Jersey Number : <%= @athlete.jersey %>
    <li> Height : <%= (@athlete.height*0.0833).round(1).to_s.sub(".","'") %>
    <li> Years in the league : <%= @athlete.years_of_experience %>
    <li> Championships : <%= @athlete.championships %>
    <li> Current Team : <%= Team.all.find_by(id: @athlete.team.id).name.capitalize%>
</ul>

<%= form_tag athlete_path(@athlete.id), method: "delete" do %>
  <%= submit_tag "Delete #{@athlete.name}" %>
<% end %> <br><br>


<%= form_tag athletes_path, method: "get" do %>
  <%= submit_tag "See all Players" %>
<% end %> <br><br>

<%= form_tag root_path, method: "get" do %>
  <%= submit_tag "Home" %>
<% end %> <br><br>

<%= link_to 'Back', :back %>